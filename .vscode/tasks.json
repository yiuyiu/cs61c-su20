{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: gcc build",
            "command": "/usr/bin/gcc",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                // "${file}",
                "${fileDirname}/test_lfsr.c",
                "${fileDirname}/lfsr.c",
                "-o",
                "${fileDirname}/a.out"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },

        }
    ],
    "version": "2.0.0"
}